#!/bin/bash
# Bashism: Job control

# Test ANY and HINFO queries

. ../testVars
PROG="../../coLunacyDNS"

cat > test.lua << EOF
bindIp = "127.7.7.20" 
function processQuery(Q) -- Called for every DNS query received
  return {co1Type = "A", co1Data = "10.1.1.1"}
end
EOF

${PROG} -d test.lua &
sleep 1

askmara Amaradns.samiam.org. 127.7.7.20 > output.test
askmara Zmaradns.samiam.org. 127.7.7.20 >> output.test
askmara 13:maradns.samiam.org. 127.7.7.20 >> output.test

LIST=$( ps auxw | awk "$PROCGET" | grep "$PROG" | awk '{print $1}' )
for process in $LIST ; do
	kill -ALRM $process
done
sleep 1
rm test.lua

if ! cmp output.success output.test > /dev/null 2>&1 ; then
        echo OneAnswer Test failed
        exit 255
fi

echo OneAnswer test Success
rm output.test
