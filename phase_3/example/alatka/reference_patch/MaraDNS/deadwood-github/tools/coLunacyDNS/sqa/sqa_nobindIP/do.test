#!/bin/bash
# Bashism: Job control

. ../testVars
PROG="../../coLunacyDNS"

cat > test.lua << EOF
function processQuery(Q) -- Called for every DNS query received
  return {co1Type = "A", co1Data = "10.1.1.1"}
end
EOF

${PROG} -d test.lua &
sleep 1

askmara -t 2 Amaradns.samiam.org. 127.7.7.1 > output.test

LIST=$( ps auxw | awk "$PROCGET" | grep "$PROG" | awk '{print $1}' )
for process in $LIST ; do
	kill -ALRM $process
done
sleep 1
rm test.lua

if ! cmp output.success output.test > /dev/null 2>&1 ; then
        echo NoBindIP Test failed
	echo Wait 30 seconds
	sleep 30
        exit 255
fi

echo NoBindIP test Success
echo Wait 10 seconds
sleep 10
rm output.test
