doctype html
html
  head
    block title
      title iroquois
    link(rel='stylesheet' href='/static/iroquois.css')
  body
    if flash
      dl
        each messages, level in flash
          dt(class=level)= level
          each message in messages
            dd(class=level)= message

    if user
      p
        | Logged in as #[code #{user.name}].
        form(action='/logout' method='post')
          input(type='hidden' name='_csrf' value=csrf)
          button Log Out


    block content

    script(type='text/javascript' src='/static/iroquois.js')
